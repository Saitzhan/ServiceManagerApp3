@model ServiceManagerApp3.Models.ServiceRequest
<div class="container mt-4">
    <h2 class="mb-4">Информация о заявке</h2>

    <div class="card shadow-sm">
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3">Имя клиента:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Тип услуги:</dt>
                <dd class="col-sm-9">@Model.ServiceType</dd>

                <dt class="col-sm-3">Описание:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Дата создания:</dt>
                <dd class="col-sm-9">@Model.CreateTime.ToString("dd.MM.yyyy")</dd>
            </dl>

            <div class="d-flex gap-2 mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Изменить</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>
                <a asp-action="Index" class="btn btn-secondary">Назад</a>
            </div>

        </div>
    </div>
</div>
