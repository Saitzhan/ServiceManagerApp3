@model ServiceManagerApp3.Models.ServiceRequest
<div class="container mt-4">
    <h2 class="mb-4">Создать новую заявку</h2>
    <div class="card shadow-sm">
        <div class="card-body">

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Имя клиента</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ServiceType" class="form-label">Тип услуги</label>
                    <input asp-for="ServiceType" class="form-control" />
                    <span asp-validation-for="ServiceType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Описание проблемы</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-success">Сохранить</button>
                    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
