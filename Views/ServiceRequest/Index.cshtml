@model IEnumerable<ServiceManagerApp3.Models.ServiceRequest>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Список заявок</h2>
        <a class="btn btn-primary" asp-action="Create">+ Создать заявку</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Имя</th>
                <th>Тип услуги</th>
                <th>Описание</th>
                <th>Дата</th>
                <th style="width: 200px">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ServiceType</td>
                    <td>@item.Description</td>
                    <td>@item.CreateTime.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Подробнее</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
